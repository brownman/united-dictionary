<div id="comment_show" class = "center">	
<p class = "legend"><%= t 'comments.add_comment'%></p> 
<% if current_user != nil %><% @name = current_user.login %><% end %>
	<% form_for @comment,:url => {:id => "#{@phrase.id}", :controller => 'phrases', :action => 'create_comment'} do |f| %>

	<table>
		<tr>
		<td align ="right"><%= f.label :name, "#{ t 'comments.name' }" %>:</td>
		<td align = "left" ><%= f.text_field(:name, :value => @name)%></td>
		</tr>
		<tr>
		<td><%= f.label :comment_field, "#{ t 'comments.comment' }" %>:</td>
		<td><%= f.text_area(:comment_field, :value => params[:comment_field_request])%></td>
		</tr>		
	</table>
	<br />
	<% if logged_in? == false %>	
					<%= show_simple_captcha %>	
	<% end %><!-- if logged in_? -->
	
			<%= f.submit "#{ t 'comments.submit' }",:id => "comment_submit"%>	
<% end %><!-- form_for -->
</div><!-- comment_show -->