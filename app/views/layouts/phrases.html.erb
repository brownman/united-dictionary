<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
            "http://www.w3.org/TR/html4/transitional.dtd">


<html>

<head>	

		<meta http-equiv="content-type" content="text/html; charset=utf-8">	
		<meta name="author" content="Richard Schneeman">
		<meta name="verify-v1" content="WtrvU8zUP+Stu6up8RqDNNZ5zXNvWCQZFUe4RjxEpyI=">
		<%= page_title %>
		<%= meta "description", meta_description %> 
		<%= meta "keywords", meta_keywords %> 
		
		<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
		
		<% bundle do %>
		
			<%= stylesheet_link_tag 'scaffold' %>
			<%= stylesheet_link_tag 'redbox' %>
			<%= javascript_include_tag :defaults %>
			<%= javascript_include_tag 'redbox' %>
		<% end %>
		
</head>

<body>	
	<!-- special thanks to mollio.org for a design inspiration, i didn't directly copy any code, but sometimes a little reference is all it takes -->

	
	<div class="main-float-wrapper">
		<div class = "main-first-col-wrapper">
		<div class="main-first-col"></div><!-- main-first-col -->
		</div>
		<div class="main-second-col">
			<div id = "main_content" >
				<div id= "main_content_header">
					<div class = "top_nav">

						<div id="login_nav">
							<% if logged_in? %>
								<%= link_to "#{t 'header.login.no_username'}", profile_path if 
																	current_user.login == "" %>
									<%= link_to "#{t 'header.login.logout'}", logout_path %>?<br />
									<%= link_to t current_user.login, profile_path %>
							<% else %>
								<%= link_to( "#{t 'header.login.login'}", login_path) %> 
									<%= t 'or' %> 
									<%= link_to "#{t 'header.login.signup'}", signup_path %>
							<% end %>
						</div><!-- login nav -->
					</div>
					<h1 id = "site_name">
						<table>
							<tr>
							<td>
							<%= link_to get_site_name , :action => 'index', :controller => 'phrases' %>
							</td>
							<td>
								&nbsp &nbsp
							<%= render :partial => "layouts/search" %>
							</td>
							</tr>
							<tr><td><div id = "let_your_language_grow"></td></div></tr>
						</table>

					</h1>
					<br />

					<div id = "upper_navigation">
						<p>
							<%= link_to  "#{t 'header.navigation.add'}", :action => 'new_slang', 
											   :controller => 'phrases' %> |
							<%= link_to "#{t 'header.navigation.home'}", :action => 'index', 
											   :controller => 'phrases' %> |
							<%= link_to "#{t 'header.navigation.game'}" , :action=> 'slang_game' , 
												:controller => 'phrases'  %> |
							<%= link_to "#{t 'header.navigation.orphans'}", :action => 'orphans' ,
												:controller => 'phrases' %> |
							<%= link_to "#{t 'header.navigation.recent'}" , :action=> 'recently_added' , 
												:controller => 'phrases'  %> |
							<%= link_to "#{t 'header.navigation.random'}" , :action=> 'random' , 
												:controller => 'phrases'  %> |	
							<%= link_to "#{t 'header.navigation.top_users'}" , :action=> 'top_users' , 
													 :controller => 'phrases'  %> |
							<%= link_to "#{t 'header.navigation.download'}" , :action=> 'download' , 
													:controller => 'phrases' %>|
							<%= link_to "#{t 'header.navigation.a_z'}" , :action=> 'a_z' , 
													:controller => 'phrases', :ltr => 'A'  %>
							
						</p>
					</div><br />



				</div><!-- main-content-header -->
					<% current_subdomain %>
					
					<% if flash[:notice] %><div id="flash"><%= flash[:notice] %></div><% end %>

					<%= yield  %>

				<span class = "fool_indicator">
				</span><!-- fool_indicator -->

			</div><!-- main-content -->
			<div id = "footer">
				<br /><br />
				<div id = "flags" >
					<%= render :partial => 'layouts/flag_redirects' %>
				</div><br />
				<br />
				<p>
					Â©2009 Richard Schneeman |
				<%= link_to  "#{t 'footer.terms'}", :action => "terms", :controller => "phrases" %> |
				<%= link_to "#{t 'footer.privacy'}", :action => "contact", :controller => "phrases" %> |
				<%= link_to "#{t 'footer.contact'}", :action => "contact", :controller => "phrases" %> |
				<%= link_to "#{t 'footer.about'}", :action => 'about', :controller => 'phrases'  %> |
				<a href = "http://github.com/snowmaninthesun/united-dictionary/tree/master"><%= "#{t 'footer.contribute'}" %></a>
				
				</p>


			</div><!-- footer -->
		</div><!-- main_second_col -->
		
		<div class = "main-third-col-wrapper">
		<div class="main-third-col"></div><!-- main-third-col -->
		</div>

	</div><!-- main-float-wrapper -->



	<script type="text/javascript">
	var uservoiceJsHost = ("https:" == document.location.protocol) ? "https://uservoice.com" : "http://cdn.uservoice.com";
	document.write(unescape("%3Cscript src='" + uservoiceJsHost + "/javascripts/widgets/tab.js' type='text/javascript'%3E%3C/script%3E"))
	</script>
	<script type="text/javascript">
	UserVoice.Tab.show({ 
	  key: 'uniteddictionary',
	  host: 'uniteddictionary.uservoice.com', 
	  forum: 'general', 
	  alignment: 'right', /* 'left', 'right' */
	  background_color:'#f00', 
	  text_color: 'white', /* 'white', 'black' */
	  hover_color: '#06C',
	  lang: 'en' /* 'en', 'de', 'nl', 'es', 'fr' */
	})
	</script>


</body>
<script type="text/javascript">
var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
</script>
<script type="text/javascript">
try {
var pageTracker = _gat._getTracker("UA-5070471-1");
pageTracker._trackPageview();
} catch(err) {}</script>
</html>	